<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Elevate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Light_blue_300_dark</item>
        <item name="colorPrimaryVariant">@color/Light_blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Cyan_A_400_Dark</item>
        <item name="colorSecondaryVariant">@color/Cyan_A_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Elevate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OutlinedEditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/OnSecondary</item>
        <item name="hintTextColor">@color/OnSecondary</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:fontFamily">@font/kanit</item>
        <item name="boxStrokeColor">@color/OnSecondary</item>
        <item name="borderWidth">16dp</item>
    </style>

    <style name="OutlinedInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="TvFormTitle">
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:fontFamily">@font/kanit_bold</item>
    </style>

    <style name="TitleDetailBrand">
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxWidth">140dp</item>
        <item name="android:fontFamily">@font/kanit_bold</item>
    </style>

    <style name="Caption">
        <item name="android:alpha">.4</item>
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="Caption.Term" parent="Caption">
        <item name="android:alpha">.4</item>
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/kanit</item>
        <item name="android:paddingStart">64dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:textColor">@color/OnSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/kanit_semibold</item>
    </style>

    <style name="SubtitleDetailBrand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">.2</item>
        <item name="android:textColor">@color/greytext</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/kanit_bold</item>
    </style>

    <style name="StatusIdeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/kanit_semibold</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progress">50</item>
        <item name="android:max">100</item>
        <item name="android:scaleY">3</item>
        <item name="android:progressTint">@color/OnSecondary</item>
    </style>

</resources>