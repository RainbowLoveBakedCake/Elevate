<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_layout_padding">

    <ImageView
        android:id="@+id/img_header_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:src="@drawable/ic_onboarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/kanit_extrabold"
        android:text="Ideator"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/img_header_onboarding"
        app:layout_constraintStart_toStartOf="@+id/img_header_onboarding"
        app:layout_constraintTop_toBottomOf="@+id/img_header_onboarding" />

    <TextView
        android:id="@+id/tv_caption_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kanit_semibold"
        android:text="@string/placeholder_caption"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_onboarding"
        app:layout_constraintStart_toStartOf="@+id/tv_title_onboarding"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_onboarding" />

</androidx.constraintlayout.widget.ConstraintLayout>